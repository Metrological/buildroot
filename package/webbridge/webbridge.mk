################################################################################
#
# webbridge
#
################################################################################

WEBBRIDGE_VERSION = 5531b06dc7687094f4b2835f6aa154b64c7956bd
WEBBRIDGE_SITE_METHOD = git
WEBBRIDGE_SITE = git@github.com:Metrological/webbridge.git
WEBBRIDGE_INSTALL_STAGING = YES
WEBBRIDGE_DEPENDENCIES += cppsdk

ifeq ($(BR2_ENABLE_DEBUG),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_DEBUG=ON
else ifeq ($(BR2_PACKAGE_CPPSDK_DEBUG),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_DEBUG=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_TRACECONTROL),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_TRACECONTROL=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_MONITOR),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_MONITOR=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_DICTIONARY),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_DICTIONARY=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_BACKOFFICE),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_BACKOFFICE=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_PROVISIONING),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_PROVISIONING=ON
WEBBRIDGE_DEPENDENCIES += libprovision
endif

ifeq ($(BR2_PACKAGE_PLUGIN_NETFLIX),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_NETFLIX=ON
WEBBRIDGE_DEPENDENCIES += netflix
endif

ifeq ($(BR2_PACKAGE_PLUGIN_WEBPROXY),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_WEBPROXY=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_REMOTECONTROL),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_REMOTECONTROL=ON
ifeq ($(BR2_PACKAGE_GREENPEAK_GP501)$(BR2_PACKAGE_GREENPEAK_GP711),y)
WEBBRIDGE_DEPENDENCIES += greenpeak
WEBBRIDGE_CONF_OPT += -DGREENPEAK_REMOTE=ON
endif
endif

ifeq ($(BR2_PACKAGE_PLUGIN_QUEUECOMMUNICATOR),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_QUEUECOMMUNICATOR=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_DEVICEINFO),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_DEVICEINFO=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_BROWSER),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_BROWSER=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_WEBKITBROWSER),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_WEBKITBROWSER=ON
WEBBRIDGE_DEPENDENCIES += wpe 
endif

ifeq ($(BR2_PACKAGE_PLUGIN_DIALSERVER),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_DIALSERVER=ON
endif

ifeq ($(BR2_PACKAGE_PLUGIN_NXRESOURCECENTER),y)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_PLUGIN_NXRESOURCECENTER=ON
WEBBRIDGE_DEPENDENCIES += bcm-refsw
endif

ifeq ($(BR2_PACKAGE_PLUGIN_MINIMIZED),)
WEBBRIDGE_CONF_OPT += -DWEBBRIDGE_WEB_UI=ON
endif

define WEBBRIDGE_POST_TARGET_INITD
    $(INSTALL) -D -m 0755 package/webbridge/S80webbridge $(TARGET_DIR)/etc/init.d
endef

WEBBRIDGE_POST_INSTALL_TARGET_HOOKS += WEBBRIDGE_POST_TARGET_INITD

$(eval $(cmake-package))
