+/**********************
+ * Generate CRC Table *
+ **********************/
+
+static void generate_crc_table(void)
+{
+  /* Locals */
+
+  int32_t   i,j;
+  uint32_t  c;
+
+  /* Generate */
+
+  for (i = 0; i < 256; ++i)
+  {
+    for (c = i << 24, j = 8; j > 0; --j)
+    {
+      c = c & 0x80000000 ? (c << 1) ^ CRC32_POLY : (c << 1);
+    }
+    nand_crc_table[i] = c;
+  }
+}
