+
+    sparebuff[0] = force_native_endian(BCHP_REG(BCHP_NAND_SPARE_AREA_READ_OFS_0));
+    sparebuff[1] = force_native_endian(BCHP_REG(BCHP_NAND_SPARE_AREA_READ_OFS_4));
