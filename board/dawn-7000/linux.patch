+static BLI_VOID __attribute__((__noinline__)) memcopy08(BLI_VOID *dest, BLI_VOID *source, BLI_UINT32 len)
+{
+  __asm__ volatile
+  (
+    "__mcpy8loop: lbu     $8,(%1)                     \n"
+    "             sb      $8,(%0)                     \n"
+    "             addi    %1,1                        \n"
+    "             addi    %0,1                        \n"
+    "             addi    %2,-1                       \n"
+    "             bne     $0,%2,__mcpy8loop           \n"
+    "             nop                                 \n"
