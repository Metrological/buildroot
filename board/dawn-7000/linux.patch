+/**********************
+ * Return Device Size *
+ **********************/
+
+static BLI_UINT64 get_device_size(BLI_UINT32 nand_config)
+{
+  BLI_UINT64 shft,size;
+  BLI_INT32  i;
+  shft = ((nand_config & BCHP_NAND_CONFIG_DEVICE_SIZE_MASK) >> BCHP_NAND_CONFIG_DEVICE_SIZE_SHIFT);
+  size = (4 * MEGA);
+  for (i = 0; i < shft; i++)
+  {
+    size += size;
+  }
+  return(size);
+}
